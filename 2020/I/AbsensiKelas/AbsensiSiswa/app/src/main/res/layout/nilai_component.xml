<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/bg_rect_nilai_component"
    android:id="@+id/nilai_list_content">

    <ImageButton
        android:id="@+id/bt_nilai_component_delete"
        android:layout_width="48dp"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_weight="0"
        android:background="@drawable/ic_delete" />

    <TextView
        android:id="@+id/nilai_subject"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="TA.19-20/S.1/K.1A/T.1/ST.1/P.1/TG.1"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/nilai_subject_tahun"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:textColor="#FF0505"
        android:textSize="18sp"
        android:text="25-06-2020"/>

</LinearLayout>