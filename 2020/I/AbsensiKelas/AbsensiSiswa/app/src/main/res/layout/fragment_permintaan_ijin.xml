<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.guru.home.menukelas.ijin.PermintaanIjinFragment">

    <TextView
        android:id="@+id/tv_permintaan_ijin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_title_frag"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingVertical="6dp"
        android:background="@color/bg_gray"
        android:textAppearance="@style/title_fragment"
        android:text="@string/permintaan_ijin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_permintaan_ijin"
        android:background="@drawable/bg_search">

        <ImageButton
            android:id="@+id/ib_search_button_minta_ijin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_search"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/search_icon"
            android:labelFor="@id/ed_minta_ijin"/>

        <EditText
            android:id="@+id/ed_minta_ijin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="@string/nis_disini"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:textColorHint="#E5E5E5"
            android:hint="@string/no_induk_siswa"
            tools:ignore="LabelFor"
            android:background="@null"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>