<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:padding="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Light">

    <ImageView
        android:id="@+id/ic_nav_header_ortu"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@drawable/ic_student" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:paddingStart="@dimen/nav_header_vertical_spacing"
        android:paddingEnd="@dimen/nav_header_vertical_spacing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nav_header_main_ortu_nama_siswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="@string/nama_siswa"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/tv_nav_header_main_ortu_nis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_induk_siswa" />

    </LinearLayout>

</LinearLayout>